@model CeylonWellness.Web.Models.MultiStepFormViewModel
<div class="container">
    <!-- Dairy Products Question -->
    <div class="col-12 col-md-12 text-center">
        <input type="hidden" id="dairy" asp-for="Dairy" />
        <h2 class="text-primary mt-3 mb-5">Do you take Dairy Products?</h2>
        <div class="row justify-content-center mb-4">
            <button class="btn btn-outline-primary dairy-btn col-6 col-md-3 pb-3 text-center" type="button" id="dairy-yes-btn" value="Yes" data-mdb-ripple-init data-mdb-ripple-color="dark" onclick="setDairy('Yes')">
                <span class="fs-6">Yes</span>
            </button>
        </div>
        <div class="row justify-content-center">
            <button class="btn btn-outline-primary dairy-btn col-6 col-md-3 pb-3" type="button" id="dairy-no-btn" value="No" data-mdb-ripple-init data-mdb-ripple-color="dark" onclick="setDairy('No')">
                <span class="fs-6">No</span>
            </button>
        </div>
    </div>

    <!-- Eggs Question -->
    <div class="col-12 col-md-12 text-center">
        <input type="hidden" id="eggs" asp-for="Eggs" />
        <h2 class="text-primary mt-5 mb-5">Do you eat Eggs?</h2>
        <div class="row justify-content-center mb-4">
            <button class="btn btn-outline-primary eggs-btn col-6 col-md-3 pb-3" type="button" id="eggs-yes-btn" value="Yes" data-mdb-ripple-init data-mdb-ripple-color="dark" onclick="setEggs('Yes')">
                <span class="fs-6">Yes</span>
            </button>
        </div>
        <div class="row justify-content-center">
            <button class="btn btn-outline-primary eggs-btn col-6 col-md-3 pb-3" type="button" id="eggs-no-btn" value="No" data-mdb-ripple-init data-mdb-ripple-color="dark" onclick="setEggs('No')">
                <span class="fs-6">No</span>
            </button>
        </div>
    </div>
    <div id="imageContainer" class="position-fixed end-0 top-50 translate-middle-y d-none">
        <img src="/Assets/AI_generated/45_age_group.jpg" alt="Image" class="img-fluid">
    </div>
</div>
<div class="d-flex justify-content-center fixed-bottom mt-4 mb-4">
    <div class="d-flex">
        <button type="button" onclick="loadNextStep('Steps/_SelectDiatpref')" class="btn btn-secondary btn-lg mx-2">Previous</button>
        <button type="button" onclick="handleMacroNextStep()" class="btn btn-primary btn-lg mx-2">Continue</button>
    </div>
</div>
