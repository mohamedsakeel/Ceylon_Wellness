@model IEnumerable<dynamic>

<link rel="stylesheet" href="/css/custom.css"/>
<h2>Frequently Asked Questions</h2>

<div id="accordion" class="accordion accordion-flush">
    @foreach (var faqItem in ViewBag.FAQ)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading@(faqItem.Question)">
                <button class="accordion-button collapsed" type="button" data-mdb-toggle="collapse" data-mdb-target="#collapse@(faqItem.Question)" aria-expanded="false" aria-controls="collapse@(faqItem.Question)">
                    @faqItem.Question
                </button>
            </h2>
            <div id="collapse@(faqItem.Question)" class="accordion-collapse collapse" aria-labelledby="heading@(faqItem.Question)" data-mdb-parent="#accordion">
                <div class="accordion-body">
                    @faqItem.Answer
                </div>
            </div>
        </div>
    }
</div>

<hr />

<h2>Have a question?</h2>
<div id="chatBox" class="card">
    <div id="messages" class="card-body"></div>
    <div class="card-footer">
        <div class="input-group">
            <input type="text" id="userInput" class="form-control" placeholder="Type your question...">
            <div class="input-group-append">
                <button id="sendButton" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</div>

<img src="/Assets/Male User.png"

<div id="answerContainer"></div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js" ></script>
<script src="/js/faq.js"></script>

